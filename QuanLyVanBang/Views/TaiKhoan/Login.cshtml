@model QuanLyVanBang.Models.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<!-- Nhúng file CSS riêng -->
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Đăng nhập</h2>

                <form asp-controller="TaiKhoan" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="TenDangNhap" class="form-label">Tên đăng nhập</label>
                        <input type="text" asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" required />
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MatKhau" class="form-label">Mật khẩu</label>
                        <input type="password" asp-for="MatKhau" class="form-control" placeholder="Nhập mật khẩu" required />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="#" class="text-primary">Quên mật khẩu?</a>
                    </div>

                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        <a asp-action="Register" class="btn btn-outline-secondary">
                            <i class="bi bi-person-plus"></i> Đăng ký tài khoản mới
                        </a>
                    </div>

                    <div class="d-flex justify-content-center mt-3">
                        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Home")'">
                            <i class="bi bi-house-door-fill"></i> Trang chủ
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
