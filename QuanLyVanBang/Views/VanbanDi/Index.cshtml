@model IEnumerable<QuanLyVanBang.Models.VanBanDi>

@{
    ViewData["Title"] = "Danh sách văn bản đi";
}

<!-- Tiêu đề và nút Thêm mới -->
@* <h3 class="mb-4">Danh sách văn bản đi</h3> *@
<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm mới</a>
</p>

<!-- Card bao quanh bảng -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách văn bản đi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.SoHieuVanBan)</th>
                        <th>@Html.DisplayNameFor(model => model.TrichYeu)</th>
                        <th>@Html.DisplayNameFor(model => model.MaLoaiVanBan)</th>
                        <th>@Html.DisplayNameFor(model => model.DoKhan)</th>
                        <th>@Html.DisplayNameFor(model => model.DonViBanHanh)</th>
                        <th>@Html.DisplayNameFor(model => model.NgayGui)</th>
                        <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.SoHieuVanBan)</td>
                            <td>@Html.DisplayFor(modelItem => item.TrichYeu)</td>
                            <td>@Html.DisplayFor(modelItem => item.MaLoaiVanBan)</td>
                            <td>@Html.DisplayFor(modelItem => item.DoKhan)</td>
                            <td>@Html.DisplayFor(modelItem => item.DonViBanHanh)</td>
                            <td>@Html.DisplayFor(modelItem => item.NgayGui)</td>
                            <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaVanBanDi" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.MaVanBanDi" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i> Chi tiết</a>
                                <a asp-action="Delete" asp-route-id="@item.MaVanBanDi" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
