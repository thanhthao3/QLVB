@model QuanLyVanBang.Models.LichSuXuLy

@{
    ViewData["Title"] = "Thêm mới lịch sử xử lý";
}

<h1>Thêm mới lịch sử xử lý</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaVanBanDi" class="control-label"></label>
                <input asp-for="MaVanBanDi" class="form-control" />
                <span asp-validation-for="MaVanBanDi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayDuyet" class="control-label"></label>
                <input asp-for="NgayDuyet" class="form-control" type="datetime-local" />
                <span asp-validation-for="NgayDuyet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNguoiDuyet" class="control-label"></label>
                <input asp-for="MaNguoiDuyet" class="form-control" />
                <span asp-validation-for="MaNguoiDuyet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buoc" class="control-label"></label>
                <input asp-for="Buoc" class="form-control" />
                <span asp-validation-for="Buoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NhanXet" class="control-label"></label>
                <textarea asp-for="NhanXet" class="form-control" rows="3"></textarea>
                <span asp-validation-for="NhanXet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}